 A= imread('parrot.png');
 z = 1;
 X1 = A(1:511,:);
 X2 = A(2:512,:);
 X1 = X1(:);
 X2 = X2(:);
 mu1 = mean(X1);
 mu2 = mean(X2);
 X3 = int32(X1).*int32(X2);
 mu3 = mean(X3);
 cov = mu3 - mu1*mu2;
 X1 = single(X1);
 X2 = single(X2);
 varx1 = var(X1);
 varx2 = var(X2);
 cor = cov/sqrt(varx1*varx2);
 
% R = corrcoeff(X1,X2);
% Cor = R(1,2);